<section id="info" class="py-3">

         <div class="container">
            <div class="row">
                <div class="col-md-8 align-self-center">
                 <div class="column is-2 is-offset-1 has-text-centered">

    <p class="f7"><i class="fa fa-clock"></i> Posted <%= time_ago_in_words(@job.created_at) %> ago</p>


    <h1 class="title is-2"><%= @job.title %></h1>
    <%= job_type(@job.job_type) %>
    


    <i class="fa fa-pin"></i> <%= @job.location %>
    <% if @job.remote_ok? %>
        <i class="fa fa-wifi"></i> Remote Job
      <% end %>

    <ul class="list pb4">
      
      
     
    </ul>

    <h5 class="is-5 has-text-centered"><%= link_to @job.job_author, @job.url %></h5>

    <div class="content text-serif f4">
      <%= @job.description.html_safe %>
    </div>

    <div class="mt2 mb4">
    <%= link_to @job.url do %>
      
    <% end %>
    </div>

    

  
     
       
     
        <div class="btn-group">
      
       
     
     
 


  </div>

  </div>
   <%= link_to 'Apply to this job', @job.apply_url, class:"btn btn-primary btn-block" %>
                </div>

                  
                <div class="col-md-4">
                  <br>
              <div class="card mb-4 box-shadow">


                <div class="d-flex flex-row justify-content-center">
                <% if !@job.avatar.file.nil? %>
                <%= link_to image_tag(@job.avatar_url(:thumb), size: "115x115", alt: @job.job_author, class: "card-img-top"), @job.url %>
                <% end %>

              </div>

                <div class="card-body">
                  <p class="card-text text-center">
                   <i class="fa fa-globe text-center"></i>
                 </p>
                  <p class="card-text text-center"> <%= link_to 'Apply to this job', @job.apply_url, class:"button is-rounded is-large is-fullwidth is-link" %></p>

                  <% if current_user.try(:admin) || job_author(@job) %>
                 

                  <div class="d-flex flex-row justify-content-center">
                  Admin controls: 

                </div>
                  <div class="d-flex flex-row justify-content-center">
                    
                  <div class="btn-group">
                  <%= link_to 'View', @job, class: 'btn btn-outline-primary btn-sm btnright' %>
       
                  <%= link_to 'Edit', edit_job_path(@job), class: 'btn btn-outline-primary btn-sm btnright' %>
   
                  <%= link_to 'Delete', @job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-primary btn-sm btnright' %>
     
                 <% end %>
                  
                </div>
               
                  
                </div>
              </div>
            </div>
            </div>
         </div>